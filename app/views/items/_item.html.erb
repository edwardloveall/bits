<% if @bookmarklet %>
  <script type="text/javascript" charset="utf-8">
    window.close()
  </script>
<% end %>
<article class="item">
  <h2><%= link_to item.title, item.url, html_options = { target: '_blank' } %></h2>
  <% if item.description.present? %>
    <section class="description"><%= to_markdown(item.description) %></section>
  <% end %>
  <span class="author">
    <% if item.user.present? %>
    <%= link_to item.user.name, item.user, class: "user-color-" + item.user.color_id.to_s %>
    <% end %>
  </span>
</article>
<section class="meta">
  <% if current_user %>
    <%= link_to 'Edit', edit_item_path(item), class: 'edit' %>
    <%= link_to 'Delete', item, class: 'delete', confirm: 'Are you sure?', method: :delete if @delete_enabled %>
  <% end %>
</section>